{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "extends": "@repo/typescript-config/vite-tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.tsx",
    "commitlint.cjs",
    "commitlint.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}